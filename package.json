{
  "name": "reviewresponderext",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:extension": "concurrently \"npm run build:watch\" \"npm run watch:reload\"",
    "watch:reload": "nodemon --watch dist --exec \"echo Extension files updated - please reload extension in Chrome\"",
    "build": "tsc -b && vite build",
    "build:watch": "tsc -b && vite build --watch",
    "build:extension": "npm run build && npm run copy:manifest",
    "copy:manifest": "echo 'Manifest and icons copied by vite-plugin-static-copy'",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pack:extension": "npm run build:extension && npm run zip:extension",
    "zip:extension": "cd dist && powershell Compress-Archive -Path * -DestinationPath ../ai-review-responder.zip -Force"
  },
  "dependencies": {
    "firebase": "^11.9.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.326",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.5",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.9",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.0.0"
  }
}
